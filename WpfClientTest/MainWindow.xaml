<Window x:Class="WpfClientTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClientTest"
        mc:Ignorable="d"
        Title="Test API" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBox x:Name="txtApiName" Text="api/brand" FontSize="20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="btnGetAll" FontSize="50" Content="GET ALL" Click="btnGetAll_Click"/>
            <Button x:Name="btnGet" FontSize="50" Content="GET BY ID" Click="btnGet_Click"/>
        </StackPanel>
        
        <Button x:Name="btnPost" FontSize="50" Content="POST" Click="btnPost_Click"/>
        <Label x:Name="labConten" Content="....." FontSize="20" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <Grid x:Name="gridData" Height="100"/>

    </StackPanel>
</Window>
